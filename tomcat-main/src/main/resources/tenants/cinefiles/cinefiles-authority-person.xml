<record id="person" is-extension="true">
	<services-record-path id="cinefiles">persons_cinefiles:http://collectionspace.org/services/person/local/cinefiles,persons_cinefiles</services-record-path>

	<instances id="person">
		<!-- Replace instances -->
		<instance id="person-person">
			<web-url>person</web-url>
			<title-ref>person</title-ref>
			<title>Persons</title>
		</instance>
	</instances>

	<section id="personNameAuthorityInformation">
		<!-- Tie to country vocabulary, and add ui-search -->
		<field id="birthPlace" autocomplete="vocab-country" ui-type="enum" ui-search="repeatable"/>

		<!-- Local fields -->
		
		<field id="birthState" section="cinefiles" ui-search="repeatable"/>
		<field id="birthCity" section="cinefiles" ui-search="repeatable"/>

		<field id="accessCode" section="cinefiles" ui-search="repeatable">
			<options>
				<option id="" default="yes">Please select a value</option>
				<option id="option1">Option 1</option>
				<option id="option2">Option 2</option>
			</options>
		</field>
	</section>
</record>