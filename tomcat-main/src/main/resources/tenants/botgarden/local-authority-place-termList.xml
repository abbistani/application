<record id="preferredPlace">
	<section id="termInformation">
		<repeat id="placeTermGroupList/placeTermGroup">
			<field id="termType">
				<!-- Change options -->
				<options>
					<option id="">Please select a value</option>
					<option id="synonym">Synonym</option>
					<option id="verified-geographic">Verified Geographic Name</option>
					<option id="reverse-qualified">Reverse Qualified Name</option>
					<option id="short-name">Short Name</option>
					<option id="unverified-geographic">Unverified Geographic Name</option>
				</options>
			</field>
			<field id="historicalStatus">
				<!-- Change options -->
				<options>
					<option id="current" default="yes">Current</option>
					<option id="historical">Historical</option>
					<option id="both">Both</option>
					<option id="unknown">Unknown</option>
				</options>
			</field>
		</repeat>
	</section>
</record>
