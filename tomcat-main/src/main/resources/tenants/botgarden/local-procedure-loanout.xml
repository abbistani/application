<record id="loanout">
	<services-record-path id="botgarden">loansout_botgarden:http://collectionspace.org/services/loanout/local/botgarden,loansout_botgarden</services-record-path>

	<section id="loanoutInformation">
		<field id="loanOutNumber">
			<!-- Change options -->
			<options>
				<option id="uc-loanout" sample="UC1000">UC Loan Out</option>
				<option id="jeps-loanout" sample="JEPS1000">Jepson Loan Out</option>
				<option id="loanout" sample="LO2012.1">Loan Out</option>
			</options>
		</field>
		
		<!-- Add organization-institution to autocomplete, and remove person-person -->
		<field id="borrower" autocomplete="organization-organization,organization-institution"/>

		<field id="loanPurpose">
			<!-- Remove options -->
			<options/>
		</field>
	
		<repeat id="taxonomyList">
			<!-- Add taxon-unverified to autocomplete -->
			<field id="taxonomy" autocomplete="taxon-taxon,taxon-unverified"/>
		</repeat>
		
		<!-- Local fields -->
		
		<repeat id="collectorList" section="botgarden">
			<field id="collector" autocomplete="organization-organization" section="botgarden"/>
		</repeat>
		<field id="collectionNote" section="botgarden"/>
		<field id="gardenLocation" autocomplete="location-location" section="botgarden"/>
		<field id="sheetAccessionNumber" section="botgarden"/>
		<field id="reviewComplete" datatype="boolean" section="botgarden"/>
	</section>

	<section id="phenologyGroup">
		<field id="sterile" datatype="boolean" section="botgarden"/>
		<field id="fertile" datatype="boolean" section="botgarden"/>
		<field id="flowering" datatype="boolean" section="botgarden"/>
		<field id="fruiting" datatype="boolean" section="botgarden"/>
		<field id="inSpore" datatype="boolean" section="botgarden"/>
	</section>
</record>