<record id="media">
	<services-record-path id="pahma">media_pahma:http://collectionspace.org/services/media/local/pahma,media_pahma</services-record-path>

	<section id="mediaInformation">
		<repeat id="languages">
			<field id="language">
				<enum>
					<!-- Add blank-value -->
					<blank-value>(none selected)</blank-value>
				</enum>
			</field>
		</repeat>
		<repeat id="types">
			<field id="type">
				<!-- Change options -->
				<options>
					<option id="" default="yes">(none selected)</option>
					<option id="document">document</option>
					<option id="image">image</option>
					<option id="slide">slide</option>
					<option id="video">video</option>
				</options>
			</field>
		</repeat>
		<field id="approvedForWeb" section="pahma">
			<options>
				<option id="" default="yes">(none selected)</option>
				<option id="no">No</option>
				<option id="yes">Yes</option>
			</options>
		</field>
		<field id="primaryDisplay" section="pahma">
			<options>
				<option id="" default="yes">(none selected)</option>
				<option id="no">No</option>
				<option id="yes">Yes</option>
			</options>
		</field>
	</section>
</record>
