<record id="dimension">
	<section id="dimensionInformation">
		<repeat id="measuredPartGroupList/measuredPartGroup">
			<field id="measuredPart">
				<!-- Delete the options -->
				<!-- TODO: Figure out how to delete the options tag, so this works. -->
				<options/>
			</field>
			<repeat id="dimensionSubGroupList/dimensionSubGroup">
				<field id="dimension">
					<!-- Change options -->
					<options>
						<option id="">(none selected)</option>
						<option id="angle">angle</option>
						<option id="area">area</option>
						<option id="circumference">circumference</option>
						<option id="depth">depth/thickness</option>
